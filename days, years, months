//write a program to convert days into years:months:days and also tell the remaining days.
#include <stdio.h>
int main() {
    int total_days, years, months, days, remaining_days;
    printf("Enter the total number of days: ");
    scanf("%d", &total_days);
    years = total_days / 360;
    remaining_days = total_days % 360;
    months = remaining_days / 30;
    days = remaining_days % 30;
    printf("Converted: %d years : %d months : %d days\n", years, months, days);
    printf("Remaining days: %d\n", days);
    return 0;
}
