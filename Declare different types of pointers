#include <stdio.h>
int main() {
    int a = 10;
    float b = 5.5;
    char c = 'A';
    int *p1 = &a;
    float *p2 = &b;
    char *p3 = &c;
    printf("Value of a = %d, Address of a = %p, Value through pointer = %d\n", a, &a, *p1);
    printf("Value of b = %.2f, Address of b = %p, Value through pointer = %.2f\n", b, &b, *p2);
    printf("Value of c = %c, Address of c = %p, Value through pointer = %c\n", c, &c, *p3);
    return 0;
}
