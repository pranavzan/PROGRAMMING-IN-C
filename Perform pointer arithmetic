#include <stdio.h>

int main() {
    int a = 10;
    float b = 20.5;
    char c = 'X';

    int *p1 = &a;
    float *p2 = &b;
    char *p3 = &c;

    printf("Original address of int pointer: %p\n", p1);
    p1++;
    printf("After increment: %p\n", p1);
    p1--;
    printf("After decrement: %p\n\n", p1);

    printf("Original address of float pointer: %p\n", p2);
    p2++;
    printf("After increment: %p\n", p2);
    p2--;
    printf("After decrement: %p\n\n", p2);

    printf("Original address of char pointer: %p\n", p3);
    p3++;
    printf("After increment: %p\n", p3);
    p3--;
    printf("After decrement: %p\n", p3);

    return 0;
}
